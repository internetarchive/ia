    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Program",
            "type": "node",
            "program": "${workspaceFolder}/cli/index.js",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "/opt/brew/bin/deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect",
                "--inspect-brk",
                "--allow-all",
            ],
            "args": [
                "queue",
                "download",
                "./download",
                "babyelephant",
                "archivewalk"
            ],
            "attachSimplePort": 9229
        }
    ]
}